<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= link_to gravatar_for(@user, size: 50) %>
      <h1><%= @user.name %></h1>
      <h1><%= @user.profile %></h1>
      <span><%= link_to "Following Users", following_user_path(@user) %></span>
      <span><%= link_to "Follower Users", followers_user_path(@user) %></span>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>