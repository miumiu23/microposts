<% provide(:title, @title) %>
　<div class="row">
  　<aside class="col-md-4">
      <section class="user_info">
        <span><%= render 'shared/user_info' %></span>
      </section>
    </aside>
　</div> 
   <div class="col-md-12">
    <h1><%= @title %></h1>
    <% if @users.any? %>
      <ul>
      <% @users.each do |user| %>
       <li class="following_follower_users_list">
        <%= gravatar_for user %>
        <%= user.name %>
     　</li>
    　<% end %>
    　</ul>
    <% end %>
    </div>
   </div>
</div>  